<h1>Update Menu Item</h1>

<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <!-- note that this is a password field, dont mess this up! -->
  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :dietary_rest %>
  <%= f.text_field :dietary_rest %>

  <%= f.submit %>
<% end %>
<%= link_to "DELETE", item_path(@item), method: :delete %>
